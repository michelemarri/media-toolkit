{
  "name": "media-toolkit",
  "version": "2.4.0",
  "description": "WordPress plugin for complete media management - Multi-provider storage (S3, R2, Spaces, B2, Wasabi), CDN integration, image optimization",
  "private": true,
  "scripts": {
    "dev": "npm run build:css -- --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./assets/src/css/admin.css -o ./assets/css/admin.css --minify",
    "build:js": "esbuild assets/src/js/admin.js --bundle --minify --target=es2020 --outfile=assets/js/admin.js",
    "watch": "concurrently \"npm run build:css -- --watch\" \"npm run watch:js\"",
    "watch:js": "esbuild assets/src/js/admin.js --bundle --target=es2020 --outfile=assets/js/admin.js --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.2",
    "esbuild": "^0.19.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}