{
    "name": "metodo-dev/media-toolkit",
    "description": "WordPress plugin for complete media management - S3 offloading, CDN integration, image optimization",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Michele Marri",
            "email": "plugins@metodo.dev",
            "homepage": "https://metodo.dev"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "aws/aws-sdk-php": "^3.300",
        "yahnis-elsts/plugin-update-checker": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Metodo\\MediaToolkit\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
